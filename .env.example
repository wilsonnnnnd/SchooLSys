# Redis connection
REDIS_URL=redis://127.0.0.1:6380
REDIS_PASSWORD=
REDIS_USE_CLUSTER=false
REDIS_CLUSTER_NODES=127.0.0.1:7000,127.0.0.1:7001
REDIS_TLS=false
REDIS_MAX_RETRIES=3

# Rate limiter settings
RATE_LIMIT_MAX_PER_IP=100
RATE_LIMIT_MAX_PER_EMAIL=5
RATE_LIMIT_WINDOW_SECONDS=3600
RATE_LIMIT_REDIS_PREFIX=rl:forgot

# App
PORT=3000
JWT_SECRET=your_jwt_secret_here
ACCESS_TTL_MIN=15
REFRESH_TTL_HOURS=24

# Docker monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
